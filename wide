data_wide <- long_data %>% select(c(pidp, hcondncode89, wave, sex, ethn_dv, auditc4, mastat_dv, hl2gp, hrs_slph, GHQ_total, vdmin, wwmin, hcond96, wkfruit, agegr10_dv, agegr5_dv, hhsize, hiqual_dv, sclfsat1, mday, wday, slp_qual, sclonely, wkvege, sclackcom, scisolate, hcondncode41, hcondncode42, hcondncode38, hcondncode39, hcondncode40, no_reported_illness, smlook, sclfsat3, hcondncode66, hcondncode67, hcondncode77, hcondncode71, hcondncode72, hcondncode73, hcondncode74, hcondncode75, hcondncode76, employ, fimngrs_dv, urban_dv, nbrsnci_dv, jbsec, scopngbha))
data_wide<-merge(data_wide, biomarkers_AL, by = "pidp")
wide <- data_wide %>%
    mutate(wave = paste0("w", wave)) %>%     # turn 6 â†’ "w6"
    pivot_wider(
        names_from  = wave,
        values_from = -pidp,                   # all variables except pidp
        names_sep   = "_"
    )
wide <- wide %>% select(-c("AL_total_w15","AL_total_w7","AL_total_w8","AL_total_w14"  ,"AL_total_w11"      ,      "AL_total_w13"     ,       "AL_total_w12"           
